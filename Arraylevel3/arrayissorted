#include <stdio.h>

int main() {
    int arr[100], n, i;
    int isSorted = 1;   // assume sorted

    // Input size
    printf("Enter number of elements: ");
    scanf("%d", &n);

    // Input elements
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Check sorting
    for (i = 0; i < n - 1; i++) {
        if (arr[i] > arr[i + 1]) {
            isSorted = 0;
            break;
        }
    }

    // Output result
    if (isSorted)
        printf("Array is sorted in ascending order.\n");
    else
        printf("Array is NOT sorted.\n");

    return 0;
}
